@using Microsoft.Extensions.Options
@using CovidLetter.Frontend.WebApp.Configuration
@inject IOptions<SiteConfiguration> SiteConfiguration
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["title"];
    var startPage = SiteConfiguration.Value.StartPage;
}

<h1 id="page-title">@Localizer["subtitle"]</h1>
<p>@Localizer["hint1"]</p>
<p>@Localizer["hint2"]</p>
<a href="@startPage" id="backToHomeLink" role="button" draggable="false" class="nhsuk-button" aria-label="@Localizer["continueButtonLabel"]">
    @Localizer["back"]
</a>
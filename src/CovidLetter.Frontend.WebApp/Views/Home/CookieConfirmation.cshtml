@using CovidLetter.Frontend.WebApp.Constants
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = "Your cookie settings have been saved";
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <h1 id="page-title">
            @ViewBag.Title
        </h1>

        <p>@Localizer["infoText1"]</p>
        <p>@Localizer["infoText2"]</p>

        <ul>
            <li>@Localizer["bulletPoint1"]</li>
            <li>@Localizer["bulletPoint2"]</li>
        </ul>
        
        <p>
            @Localizer["infoText3PreLinkText"]
            <a asp-action="CookiePolicy" asp-controller="@UIConstants.Home.HomeController" aria-description="@Localizer["internalLinkSameTab"]">@Localizer["infoText3LinkText"]</a>
            @Localizer["infoText3PostLinkText"]
        </p>
    </div>
</div>
@model BackButtonViewModel
@inject IViewLocalizer Localizer

<div class="nhsuk-back-link nhsuk-u-margin-bottom-0 nhsuk-u-margin-top-4" role="navigation">
    @if (Model.IsUsingHref == true) {
        <a class="nhsuk-back-link__link" href="@Model.HrefValue" aria-label="@Localizer["backButtonLabel"]">
            <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
            </svg>
            @Localizer["back"]
        </a>
    } else {
        <a class="nhsuk-back-link__link" asp-action="@Model.Action" asp-controller="@Model.Controller" aria-label="@Localizer["backButtonLabel"]">
            <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
            </svg>
            @Localizer["back"]
        </a>
    }
</div>
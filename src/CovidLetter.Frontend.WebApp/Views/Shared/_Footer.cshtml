@using CovidLetter.Frontend.WebApp.Services
@using Microsoft.Extensions.Options;
@using CovidLetter.Frontend.WebApp.Configuration;
@using CovidLetter.Frontend.WebApp.Constants

@inject ApplicationVersion Version
@inject IOptions<SiteConfiguration> SiteConfigurationOptions
@inject IViewLocalizer Localizer

@{
    var siteConfiguration = SiteConfigurationOptions?.Value;
}

<footer role="contentinfo">
	<div class="nhsuk-footer" id="nhsuk-footer">
		<div class="nhsuk-width-container nhsuk-u-clear">
			@if (ViewBag.HideFooter != true)
			{
				<ul class="nhsuk-footer__list" aria-label="@Localizer["supportLinks"]">
					@if (ViewBag.IsDigital == true)
					{
						<li class="nhsuk-footer__list-item">
							<a class="nhsuk-footer__list-item-link" href="@siteConfiguration?.DigitalAccessibilityStatementPage" target="_blank" rel="noopener noreferrer" aria-description="@Localizer["internalLinkNewTab"]">@Localizer["accessibility"]</a>
						</li>
					}
					else
					{
						<li class="nhsuk-footer__list-item">
							<a class="nhsuk-footer__list-item-link" asp-action="AccessibilityStatement" asp-controller="@UIConstants.Home.HomeController" target="_blank" aria-description="@Localizer["internalLinkNewTab"]">@Localizer["accessibility"]</a>
						</li>
					}
					<li class="nhsuk-footer__list-item">
						<a class="nhsuk-footer__list-item-link" asp-action="CookiePolicy" asp-controller="@UIConstants.Home.HomeController" target="_blank" aria-description="@Localizer["internalLinkNewTab"]">@Localizer["cookiePolicy"]</a>
					</li>
					<li class="nhsuk-footer__list-item">
						<a class="nhsuk-footer__list-item-link" href="@siteConfiguration?.FiveToElevenPrivacyPolicyPage" target="_blank" rel="noopener noreferrer" aria-description="@Localizer["internalLinkNewTab"]">@Localizer["fiveToElevenPrivacyPolicy"]</a>
					</li>
					<li class="nhsuk-footer__list-item">
						<a class="nhsuk-footer__list-item-link" href="@siteConfiguration?.UnderSixteenPrivacyPolicyPage" target="_blank" rel="noopener noreferrer" aria-description="@Localizer["internalLinkNewTab"]">@Localizer["under16PrivacyPolicy"]</a>
					</li>
					<li class="nhsuk-footer__list-item">
						<a class="nhsuk-footer__list-item-link" href="@siteConfiguration?.PrivacyPolicyPage" target="_blank" rel="noopener noreferrer" aria-description="@Localizer["internalLinkNewTab"]">@Localizer["privacyNotice"]</a>
					</li>
					<li class="nhsuk-footer__list-item">
						<a class="nhsuk-footer__list-item-link" href="@siteConfiguration?.TermsAndConditionsPage" target="_blank" rel="noopener noreferrer" aria-description="@Localizer["internalLinkNewTab"]">@Localizer["termsAndConditions"]</a>
					</li>
					<li class="nhsuk-footer__list-item">
						<a class="nhsuk-footer__list-item-link" href="@siteConfiguration?.HelpAndSupportPage" target="_blank" rel="noopener noreferrer" aria-description="@Localizer["externalLinkNewTab"]">@Localizer["helpAndSupport"]</a>
					</li>
				</ul>
			}
			@if (ViewBag.HideFooter == true)
			{
				<div class="nhsuk-footer__copyright">
					<p class="nhsuk-u-margin-bottom-0 hidden-footer">@Localizer["copyright"]</p>
				</div>
			}
			else
			{
				<p class="nhsuk-footer__copyright">@Localizer["copyright"]</p>
				<p class="nhsuk-footer__copyright"><span class="nhsuk-u-visually-hidden">@Localizer["release"] </span>@Version.AssemblyInformationalVersion</p>
			}
		</div>
	</div>
</footer>
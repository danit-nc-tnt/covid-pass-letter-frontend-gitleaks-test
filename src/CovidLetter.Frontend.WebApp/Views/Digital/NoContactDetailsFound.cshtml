@using Microsoft.Extensions.Options
@using CovidLetter.Frontend.WebApp.Configuration
@inject IOptions<SiteConfiguration> SiteConfiguration
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = Localizer["title"];
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <h1 class="nhsuk-heading-l" id="page-title">@ViewBag.Title</h1>
        <p class="nhsuk-hint">@Localizer["para1"]</p>
        <br />
        <p class="nhsuk-hint">@Localizer["para2"]</p>
    </div>
</div>
@using Microsoft.Extensions.Options
@using CovidLetter.Frontend.WebApp.Configuration
@inject IOptions<SiteConfiguration> SiteConfiguration
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = Localizer["title"];
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <h1 class="nhsuk-heading-l" id="page-title">@ViewBag.Title</h1>
        <p>@Localizer["para1"]</p>
        <p>@Localizer["para2", "https://gov.wales/get-your-nhs-covid-pass", @Localizer["externalLinkSameTab"], @Localizer["letterLink"]]</p>
    </div>
</div>